<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PriceCalculator.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PriceCalculator"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Calculate">
            <ShellContent ContentTemplate="{DataTemplate local:CalculatePage}"/>
        </Tab>
        <Tab Title="Type Configuration">
            <ShellContent ContentTemplate="{DataTemplate local:TypeConfigPage}"/>
        </Tab>
        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}"/>
        </Tab>
    </TabBar>

</Shell>
